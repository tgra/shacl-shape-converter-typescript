@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix ex: <http://example.com/ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .


#################################################################
# Shape 1 — Person (Required + Optional + Multi-valued)
#################################################################

ex:PersonShape
    a sh:NodeShape ;

    sh:codeIdentifier "PersonShape" ;

    sh:targetClass ex:Person ;

    # Required singular property
    sh:property [
        sh:path ex:name ;
        sh:codeIdentifier "name" ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;

    # Optional singular property
    sh:property [
        sh:path ex:email ;
        sh:codeIdentifier "email" ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
    ] ;

    # Multi-valued property (collection)
    sh:property [
        sh:path ex:phoneNumber ;
        sh:codeIdentifier "phoneNumbers" ;
        sh:datatype xsd:string ;
        sh:minCount 0 ;
    ] ;

    # Numeric optional property
    sh:property [
        sh:path ex:age ;
        sh:codeIdentifier "age" ;
        sh:datatype xsd:integer ;
        sh:maxCount 1 ;
    ] .


#################################################################
# Shape 2 — Singleton Node Example
#################################################################

ex:SingletonConfigShape
    a sh:NodeShape ;

    sh:codeIdentifier "SingletonConfigShape" ;

    sh:targetNode ex:AppConfig ;

    sh:property [
        sh:path ex:version ;
        sh:codeIdentifier "version" ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .


#################################################################
# Shape 3 — Subjects Of Predicate Example
#################################################################

ex:ArticleSubjectShape
    a sh:NodeShape ;

    sh:codeIdentifier "ArticleSubjectShape" ;

    sh:targetSubjectsOf ex:writtenBy ;

    # Article title (required)
    sh:property [
        sh:path ex:title ;
        sh:codeIdentifier "title" ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;

    # Tags (multi-valued)
    sh:property [
        sh:path ex:tag ;
        sh:codeIdentifier "tags" ;
        sh:datatype xsd:string ;
    ] .


#################################################################
# Shape 4 — Objects Of Predicate Example
#################################################################

ex:AuthorObjectShape
    a sh:NodeShape ;

    sh:codeIdentifier "AuthorObjectShape" ;

    sh:targetObjectsOf ex:writtenBy ;

    # Author name (required)
    sh:property [
        sh:path ex:name ;
        sh:codeIdentifier "authorName" ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;

    # Biography (optional)
    sh:property [
        sh:path ex:bio ;
        sh:codeIdentifier "bio" ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
    ] .